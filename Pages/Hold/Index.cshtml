@page
@model _2._Sem_Project_Eksamen_System.Pages.NewFolder.IndexModel
@{
}

<h1>Classes</h1>

<a asp-page="Create" class="btn btn-primary mb-3"> <i class="bi bi-plus"></i> Class </a>

<!-- Filter -->
<form>
    <p>
        Search: <input type="text" asp-for="Filter.FilterByName" />

        <input type="submit" value="Filter" />
        <a asp-page="/Hold/Index">Back to Full List </a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Class ID</th>
            <th>Class Name</th>
            <th>No. Students</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var hold in Model.HoldList)
    {
        <tr>
            <td><a asp-page="StudentsToClasses" class="btn btn-icon" asp-route-id="@hold.ClassId"><i class="bi bi-list"></i></a></td>
            <td>@hold.ClassId</td>
            <td>@hold.ClassName</td>
            <td>@hold.StudentsToClasses.Count</td>
            <td>
                    <a asp-page="Edit" asp-route-id="@hold.ClassId">Edit</a> |
                    <a asp-page="Delete" class="btn btn-danger" asp-route-id="@hold.ClassId">Slet</a>
            </td>
                
        </tr>

    }
    </tbody>
</table>
