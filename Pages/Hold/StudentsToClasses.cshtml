@page
@model _2._Sem_Project_Eksamen_System.Pages.Hold.StudentsToClassesModel
@{
    ViewData["Title"] = "Students To Classes";
}


<h2>Students in @Model.ClassItem.ClassName</h2>
<nav>
    <a asp-page="StudentsToClasses" asp-route-id="@Model.ClassItem.ClassId" class="btn btn-primary">Students</a>
    <a asp-page="ExamsToClass" asp-route-id="@Model.ClassItem.ClassId" class="btn btn-outline-primary">Exams</a>
</nav>
<!-- nav between this corlection over students and a colection of exams this class is linked to-->

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Email</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model.Students)
    {
        <tr>
            <td>@s.StudentId.</td>
            <td>@s.StudentName</td>
            <td>@s.Email</td>
                <td>
                    <a asp-page="/Students/DetailStudent"
                       asp-route-id="@s.StudentId"
                       class="btn-toggle btn-details">
                        Details
                    </a>
                </td>
        </tr>
    }
    </tbody>
</table>

<a asp-page="Index" class="btn btn-secondary mb-3"> <i class="bi bi-arrow-left"></i> Back to Hold List</a>