@page
@model _2._Sem_Project_Eksamen_System.Pages.Eksamner.GetEksamnerModel
@using _2._Sem_Project_Eksamen_System.ViewModels
@{
    ViewData["Title"] = "Exam Overview";
}

<div class="page-body">
    <div class="dashboard-container">
        <partial name="~/Pages/Shared/_PageHeader.cshtml"
                 model='new PageHeaderModel("Exam Overview", "View, edit and manage all exams")' />

        <!-- SEARCH AND FILTER SECTION -->
        <div class="section-card">
            <div class="section-header">
                <h2>Search & Filter</h2>
            </div>
            <div class="search-container">
                <form method="get">
                    <div class="search-form">
                        <div class="form-group">
                            <label for="Filter_FilterByName" class="form-label">Exam Name</label>
                            <input type="text"
                                   asp-for="Filter.FilterByName"
                                   class="form-control compact-input"
                                   placeholder="Exam name..." />
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <span class="btn-icon">🔍</span>
                            Search
                        </button>
                        <a asp-page="/Eksamner/GetEksamner" class="btn btn-secondary">
                            <span class="btn-icon">🔄</span>
                            Reset
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @{
            var activeFilters = new List<string>();
            if (!string.IsNullOrEmpty(Model.Filter.FilterByName))
                activeFilters.Add($"Name: {Model.Filter.FilterByName}");
        }

        @if (activeFilters.Any())
        {
            <div class="section-card">
                <div class="filter-info">
                    <p>Showing results for: <strong>@string.Join(", ", activeFilters)</strong></p>
                </div>
            </div>
        }

        <!-- UPCOMING EXAMS TABLE -->
        <div class="section-card">
            <div class="section-header">
                <h2>Upcoming Exams</h2>
                <div class="header-actions">
                    <a asp-page="/Eksamner/Create_Exam" class="btn btn-primary">
                        <span class="btn-icon">➕</span>
                        Add New Exam
                    </a>
                </div>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Date</th>
                            <th>Title</th>
                            <th>Class</th>
                            <th>Number of Students</th>
                            <th class="actions-header">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.UpcomingExams != null && Model.UpcomingExams.Any())
                        {
                            foreach (var eksamen in Model.UpcomingExams)
                            {
                                <tr>
                                    <td>
                                        <a asp-page="Exam_Details" asp-route-id="@eksamen.ExamId" class="btn-toggle btn-details">
                                            <span class="btn-icon">📋</span>
                                            Details
                                        </a>
                                    </td>
                                    <td>@(eksamen.ExamStartDate?.ToString("dd-MM-yyyy") ?? "")</td>
                                    <td>@eksamen.ExamName</td>
                                    <td>
                                        @if (eksamen.Class != null)
                                        {
                                            @eksamen.Class.ClassName
                                        }
                                        else
                                        {
                                            <span class="not-assigned">Not Assigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (eksamen.NumOfStud == 0 || eksamen.NumOfStud == null)
                                        {
                                            <p>@(eksamen.StudentsToExams.Count)</p>
                                        }
                                        else
                                        {
                                            <p>@eksamen.NumOfStud</p>
                                        }

                                    </td>
                                    <td class="action-buttons">
                                        <a asp-page="./Edit_Exam" asp-route-id="@eksamen.ExamId" class="btn-toggle btn-edit">Edit</a>
                                        <a asp-page="./Delete_Exam" asp-route-id="@eksamen.ExamId" class="btn-toggle btn-delete">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="no-data">
                                    <div class="empty-state">
                                        <span class="empty-icon">📅</span>
                                        @if (!string.IsNullOrEmpty(Model.Filter.FilterByName))
                                        {
                                            <p>No upcoming exams found matching your search criteria</p>
                                        }
                                        else
                                        {
                                            <p>No upcoming exams scheduled</p>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- PAST EXAMS TABLE -->
        @if (Model.PastExams != null && Model.PastExams.Any())
        {
            <div class="section-card">
                <div class="section-header">
                    <h2>Past Exams</h2>
                </div>

                <div class="table-container">
                    <table class="data-table past-exams-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Class</th>
                                <th>Number of Students</th>
                                <th class="actions-header">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var eksamen in Model.PastExams)
                            {
                                <tr class="past-exam-row">
                                    <td>
                                        <a asp-page="Exam_Details" asp-route-id="@eksamen.ExamId" class="btn-toggle btn-details">
                                            <span class="btn-icon">📋</span>
                                            Details
                                        </a>
                                    </td>
                                    <td>@(eksamen.ExamStartDate?.ToString("dd-MM-yyyy") ?? "")</td>
                                    <td>@eksamen.ExamName</td>
                                    <td>
                                        @if (eksamen.Class != null)
                                        {
                                            @eksamen.Class.ClassName
                                        }
                                        else
                                        {
                                            <span class="not-assigned">Not Assigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (eksamen.NumOfStud == 0 || eksamen.NumOfStud == null)
                                        {
                                            <p>@(eksamen.StudentsToExams.Count)</p>
                                        }
                                        else
                                        {
                                            <p>@eksamen.NumOfStud</p>
                                        }

                                    </td>
                                    <td class="action-buttons">
                                        <a asp-page="./Edit_Exam" asp-route-id="@eksamen.ExamId" class="btn-toggle btn-edit">Edit</a>
                                        <a asp-page="./Delete_Exam" asp-route-id="@eksamen.ExamId" class="btn-toggle btn-delete">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
<!-- Style Section-->
<style>
    .search-container {
        padding: 1.5rem;
    }

    .search-form {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        align-items: end;
    }

        .search-form .form-group {
            margin-bottom: 0;
        }

        .search-form .form-label {
            font-weight: 600;
            margin-bottom: 0.25rem;
            display: block;
            font-size: 0.9rem;
        }

    .compact-input {
        height: 36px;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
    }

    .filter-info {
        background-color: #e8f4fd;
        border: 1px solid #b6d7e8;
        border-radius: 4px;
        padding: 1rem;
        margin: 1rem 1.5rem;
    }

        .filter-info p {
            margin: 0;
            color: #2c5aa0;
        }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-toggle {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.375rem 0.75rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.2s;
    }

    .btn-edit {
        background-color: #e7f1ff;
        color: #0066cc;
        border: 1px solid #b6d7e8;
    }

    .btn-details {
        background-color: #f0f9ff;
        color: #0c6c8c;
        border: 1px solid #b6d7e8;
    }

    .btn-delete {
        background-color: #fef2f2;
        color: #dc2626;
        border: 1px solid #fecaca;
    }

    .btn-toggle:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    .btn-icon {
        font-size: 0.875rem;
    }

    .not-assigned {
        color: #6b7280;
        font-style: italic;
    }

    .no-data {
        text-align: center;
        padding: 2rem;
    }

    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .empty-icon {
        font-size: 3rem;
        opacity: 0.5;
    }

    /* Past exams styling - slightly muted to differentiate */
    .past-exams-table tbody tr {
        opacity: 0.75;
    }

    .past-exam-row:hover {
        opacity: 1;
    }

    @@media (max-width: 768px) {
        .search-form

    {
        grid-template-columns: 1fr;
    }

    .form-actions {
        flex-direction: column;
    }

    .action-buttons {
        flex-direction: column;
    }

    }
    /* ==============================================
           BUTTON STYLES FOR ADD NEW EXAM
        ============================================== */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 600;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #0066cc;
        color: white;
        border: 1px solid #0052a3;
    }

        .btn-primary:hover {
            background-color: #0052a3;
            transform: translateY(-1px);
            box-shadow: 0 2px 4px rgba(0, 102, 204, 0.3);
        }

    .btn-secondary {
        background-color: #6b7280;
        color: white;
        border: 1px solid #4b5563;
    }

        .btn-secondary:hover {
            background-color: #4b5563;
            transform: translateY(-1px);
        }

    .btn-icon {
        font-size: 0.9rem;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
        align-items: center;
    }
</style>
