@page
@model _2._Sem_Project_Eksamen_System.Pages.Eksamner.GetEksamnerModel
@{
    ViewData["Title"] = "GetEksamner";
}

<h1>GetEksamner</h1>
<div>
    @foreach (var e in Model.Eksamner)
    {
        <div class="card mb-2">
            <h5 class="card-header">Featured</h5>
            <div class="card-body">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    }
</div>


<table class="table">
    <thead>
        <tr>
            <th> Eksamens ID</th>
            <th> Title</th>
            <th> Hold ID</th>
            <th> Eksaminator</th>
            <th> Censor</th>
            <th> Dato</th>
        </tr>
    </thead>
    <tbody>
       @false
        @foreach (var eksamen in Model.Eksamner)
        {
            <tr>
                <td>@eksamen.ExamId</td>
                <td>@eksamen.ExamName</td>
                <!-- FInder navnet på Class, hvis null -> "ikke tildelt"-->
                <td>@(eksamen.Class?.ClassName ?? "Ikke tildelt")</td>
                <td>
                    @(eksamen.ExaminationTeachers?
                                    .FirstOrDefault(et => et.Rolle != null &&
                                    (et.Rolle.Equals("Eksaminator", System.StringComparison.OrdinalIgnoreCase) ||
                                    et.Rolle.Equals("Examinator", System.StringComparison.OrdinalIgnoreCase) ||
                                    et.Rolle.Equals("Examiner", System.StringComparison.OrdinalIgnoreCase)))
                                    ?.Teacher?.TeacherName ?? "Ikke tildelt")
                </td>
            <td>
                    @(eksamen.ExaminationTeachers?
                                    .FirstOrDefault(et => et.Rolle != null &&
                                    (et.Rolle.Equals("Censor", System.StringComparison.OrdinalIgnoreCase)))
                                    ?.Teacher?.TeacherName ?? "Ikke tildelt")
            </td>
            <td>@(eksamen.ExamStartDate?.ToString("yyyy-MM-dd") ?? "")</td>
        </tr>
            
        }
    </tbody>
</table>
