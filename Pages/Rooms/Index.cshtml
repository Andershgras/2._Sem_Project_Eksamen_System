@page
@model _2._Sem_Project_Eksamen_System.Pages.Rooms.IndexModel
@using _2._Sem_Project_Eksamen_System.ViewModels
@{
    ViewData["Title"] = "Rooms";
}

<partial name="~/Pages/Shared/_PageHeader.cshtml"
         model='new PageHeaderModel("Room Overview", "View, edit and manage all rooms")' />

<div class="mb-3">
    <a asp-page="./Create" class="btn btn-primary">Create New Room</a>
</div>

<form method="get" class="mb-3">
    <div class="input-group" style="max-width:420px;">
        <input class="form-control" type="text" name="Filter.FilterByName" value="@Model.Filter?.FilterByName" placeholder="Search by name..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
        <a asp-page="/Room/Index" class="btn ms-3 btn-outline-secondary btn-sm">Full List</a>
    </div>
</form>


<table class="table table-sm align-middle">
    <thead>
        <tr>
            <th style="width:36px;"></th>
            <th>Room</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rooms)
        {
            var rowId = $"room-{r.RoomId}";
            <tr>
                <td>
                    <button type="button"
                            class="btn btn-link p-0 toggle-upcoming"
                            data-room-id="@r.RoomId"
                            aria-expanded="false"
                            aria-controls="@($"{rowId}-upcoming")"
                            title="Show upcoming exams">
                        ▸
                    </button>
                </td>
                <td>@r.Name</td>
                <td>@(r.Capacity?.ToString() ?? "-")</td>

                <td class="action-buttons">
                    <a asp-page="./Edit" asp-route-id="@r.RoomId" class="btn-toggle btn-edit">Edit</a>
                    <partial name="~/Pages/Shared/_DeleteButton.cshtml"
                             model="@(("./Delete", r.RoomId))" />
                </td>
            </tr>
            <tr id="@($"{rowId}-upcoming")" class="d-none">
                <td></td>
                <td colspan="3">
                    <div class="upcoming-container small text-muted">Loading…</div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener('click', async (e) => {
            const btn = e.target.closest('.toggle-upcoming');
            if (!btn) return;

            const roomId = btn.dataset.roomId;
            const detailsRow = document.getElementById(`room-${roomId}-upcoming`);
            const box = detailsRow.querySelector('.upcoming-container');
            const expanded = btn.getAttribute('aria-expanded') === 'true';

            if (expanded) {
                detailsRow.classList.add('d-none');
                btn.setAttribute('aria-expanded', 'false');
                btn.textContent = '▸';
                return;
            }

            detailsRow.classList.remove('d-none');
            btn.setAttribute('aria-expanded', 'true');
            btn.textContent = '▾';

            if (!detailsRow.dataset.loaded) {
                box.textContent = 'Loading…';
                const url = '@Url.Page("Index", "Upcoming")' + `&roomId=${encodeURIComponent(roomId)}`;
                const resp = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                box.innerHTML = await resp.text();
                detailsRow.dataset.loaded = '1';
            }
        });
    </script>
}
