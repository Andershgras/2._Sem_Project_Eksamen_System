@* 
    Pages/_Layout.cshtml
    Sidebar now uses slimmer, consistent Bootstrap Stroke Icons
*@
<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Exam Planning</title>
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Bootsrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* Make all sidebar icons consistently thin */
        .nav-item .bi {
            font-size: 1.25rem;
            font-weight: 300;
            stroke-width: 1 !important;
        }
    </style>
</head>

<body>
    <div class="app-shell">

        <!-- SIDEBAR -->
        <aside class="sidebar" role="navigation" aria-label="Hovednavigation">
            <div class="sidebar-flag" aria-hidden="true"></div>

            <div class="sidebar-content">

                <!-- BRAND -->
                <div class="brand" role="banner">
                    <div class="brand-logo" aria-hidden="true">
                        <svg width="32" height="32" viewBox="0 0 100 100">
                            <circle cx="50" cy="50" r="48" fill="#F4E87C" />
                            <path d="M28 32 L72 32 L72 38 L38 68 L72 68 L72 74 L28 74 L28 68 L62 38 L28 38 Z"
                                  fill="#000" />
                        </svg>
                    </div>
                    <div class="brand-text">
                        <div style="font-weight:600; font-size:0.95em;">Zealand</div>
                        <div style="font-size:0.75em; opacity:0.8; margin-top:-2px;">Exam Management</div>
                    </div>
                </div>

                <!-- NAVIGATION -->
                <nav class="nav-list" role="menu">

                    <a class="nav-item" asp-page="/Index" role="menuitem">
                        <span class="icon">
                            <i class="bi bi-house-door"></i>
                        </span>
                        <span class="nav-text">Home</span>
                    </a>

                    <a class="nav-item" asp-page="/Eksamner/GetEksamner" role="menuitem">
                        <span class="icon">
                            <i class="bi bi-list-task"></i>
                        </span>
                        <span class="nav-text">Exams</span>
                    </a>

                    <a class="nav-item" asp-page="/Students/GetStudent" role="menuitem">
                        <span class="icon">
                            <i class="bi bi-person-lines-fill"></i>
                        </span>
                        <span class="nav-text">Students</span>
                    </a>

                    <a class="nav-item" asp-page="/Rooms/Index" role="menuitem">
                        <span class="icon">
                            <i class="bi bi-door-closed"></i>
                        </span>
                        <span class="nav-text">Rooms</span>
                    </a>

                    <a class="nav-item" asp-page="/Teachers/Index" role="menuitem">
                        <span class="icon">
                            <i class="bi bi-person-workspace"></i>
                        </span>
                        <span class="nav-text">Teachers</span>
                    </a>

                    <a class="nav-item" asp-page="/Classes/Index" role="menuitem">
                        <span class="icon">
                            <i class="bi bi-journal-bookmark"></i>
                        </span>
                        <span class="nav-text">Classes</span>
                    </a>

                </nav>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <div class="main-content">

            <!-- HEADER -->
            <header class="app-header">
                <div class="header-left">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                <div class="header-right"></div>
            </header>

            <!-- PAGE CONTENT -->
            <main class="page-body" role="main">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="app-footer">
                <div class="footer-inner">
                    <div class="footer-accent"></div>
                    <div class="footer-text">© Zealand - Exam Management</div>
                </div>
            </footer>

        </div>

    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
