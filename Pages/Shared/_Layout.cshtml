@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Eksamensplanlægning</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="app-shell d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-white">
            <div class="sidebar-brand px-3 py-4">
                <h4 class="m-0">Eksamensplanlægning</h4>
            </div>

            <ul class="nav flex-column sidebar-menu px-2">
                <li class="nav-item">
                    <a class="nav-link text-white d-flex align-items-center" asp-page="/Exams/Index">
                        <span class="me-2">📋</span> Eksamener
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white d-flex align-items-center" asp-page="/Schedule/Index">
                        <span class="me-2">📆</span> Skema
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white d-flex align-items-center" asp-page="/Students/Index">
                        <span class="me-2">👩‍🎓</span> Studerende
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <a class="nav-link text-white d-flex align-items-center" asp-page="/Settings/Index">
                        <span class="me-2">⚙️</span> Indstillinger
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="main-content flex-fill">
            <header class="app-header d-flex align-items-center justify-content-between px-4 py-3 border-bottom">
                <div class="header-left d-flex align-items-center">
                    <button class="btn btn-sm btn-outline-secondary me-3 d-md-none" id="sidebarToggle">☰</button>
                    <h5 class="m-0">@ViewData["Title"]</h5>
                </div>
                <div class="header-right d-flex align-items-center">
                    <span class="me-3 text-muted">Velkommen, </span>
                    <div class="profile-circle bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:36px;height:36px">
                        B
                    </div>
                </div>
            </header>

            <main class="p-4">
                @RenderBody()
            </main>

            <footer class="text-center py-3 border-top small text-muted">
                © Zealand - Eksamensplanlægning
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            const toggle = document.getElementById('sidebarToggle');
            const shell = document.querySelector('.app-shell');
            toggle?.addEventListener('click', () => {
                shell.classList.toggle('sidebar-collapsed');
            });
        })();
    </script>
</body>
</html>