@page
@model _2._Sem_Project_Eksamen_System.Pages.Students.GetStudentModel
@{
    ViewData["Title"] = "Studenter Oversigt";
}

<div class="page-body">
    <div class="dashboard-container">
        <div class="welcome-card">
            <h1>Studenter Overview</h1>
            <p>Se og administrer alle studenter i systemet</p>
        </div>

        <!-- TABLE DISPLAY SECTION -->
        <div class="section-card">
            <div class="section-header">
                <h2>Alle Studenter</h2>
                <a asp-page="/Students/CreateStudent" class="btn-toggle" role="menuitem">Add New Student</a>
            </div>

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Student ID</th>
                            <th>Navn</th>
                            <th>Email</th>
                            <th>Class/Hold</th>
                            <th class="actions-header">Handlinger</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Students != null && Model.Students.Any())
                        {
                            foreach (var student in Model.Students)
                            {
                                <tr>
                                    <td>@student.StudentId</td>
                                    <td>@student.StudentName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(student.Email))
                                        {
                                            @student.Email
                                        }
                                        else
                                        {
                                            <span class="not-assigned">Not Given</span>
                                        }
                                    </td>
                                    <td>
                                        @if (student.StudentsToClasses != null && student.StudentsToClasses.Any())
                                        {
                                            @string.Join(", ", student.StudentsToClasses.Select(sc => sc.Class?.ClassName))
                                        }
                                        else
                                        {
                                            <span class="not-assigned">Not Assigned</span>
                                        }
                                    </td>
                                    <td class="action-buttons">
                                        <a asp-page="./EditStudent" asp-route-id="@student.StudentId" class="btn-toggle btn-edit">Rediger</a>
                                        <a asp-page="./DetailsStudent" asp-route-id="@student.StudentId" class="btn-toggle btn-details">Detaljer</a>
                                        <a asp-page="./DeleteStudent" asp-route-id="@student.StudentId" class="btn-toggle btn-delete">Slet</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="no-data">
                                    <div class="empty-state">
                                        <span class="empty-icon">👥</span>
                                        <p>Ingen studenter fundet</p>
                                        <a asp-page="/Students/CreateStudent" class="btn-toggle" role="menuitem">Tilføj første student</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>