@page
@model _2._Sem_Project_Eksamen_System.Pages.Students.GetStudentModel
@{
    ViewData["Title"] = "Student Overview";
}

<div class="page-body">
    <div class="dashboard-container">
        <div class="welcome-card">
            <h1>Student Overview</h1>
            <p>View and manage all students in the system</p>
        </div>

        <!-- SEARCH AND FILTER SECTION -->
        <div class="section-card">
            <div class="section-header">
                <h2>Search</h2>
            </div>
            <div class="search-container">
                <form method="get">
                    <div class="search-form">
                        <div class="form-group">
                            <label for="Filter_FilterByName" class="form-label">Search By Name:</label>
                            <input type="text"
                                   asp-for="Filter.FilterByName"
                                   class="form-control"
                                   placeholder="Enter student name..." />
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">
                                <span class="btn-icon">🔍</span>
                                Search
                            </button>
                            <a asp-page="/Students/GetStudent" class="btn btn-secondary">
                                <span class="btn-icon">🔄</span>
                                Nulstil
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- TABLE DISPLAY SECTION -->
        <div class="section-card">
            <div class="section-header">
                <h2>All Students</h2>
                <div class="header-actions">
                    <a asp-page="/Students/CreateStudent" class="btn-toggle" role="menuitem">Add New Student</a>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Filter.FilterByName))
            {
                <div class="filter-info">
                    <p>Viser resultater for: <strong>"@Model.Filter.FilterByName"</strong></p>
                </div>
            }

            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Class/Hold</th>
                            <th class="actions-header">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Students != null && Model.Students.Any())
                        {
                            foreach (var student in Model.Students)
                            {
                                <tr>
                                    <td>@student.StudentId</td>
                                    <td>@student.StudentName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(student.Email))
                                        {
                                            @student.Email
                                        }
                                        else
                                        {
                                            <span class="not-assigned">Not Given</span>
                                        }
                                    </td>
                                    <td>
                                        @if (student.StudentsToClasses != null && student.StudentsToClasses.Any())
                                        {
                                            @string.Join(", ", student.StudentsToClasses.Select(sc => sc.Class?.ClassName))
                                        }
                                        else
                                        {
                                            <span class="not-assigned">Not Assigned</span>
                                        }
                                    </td>
                                    <td class="action-buttons">
                                        <a asp-page="./EditStudent" asp-route-id="@student.StudentId" class="btn-toggle btn-edit">Edit</a>
                                        <a asp-page="./DetailStudent" asp-route-id="@student.StudentId" class="btn-toggle btn-details">Details</a>
                                        <a asp-page="./DeleteStudent" asp-route-id="@student.StudentId" class="btn-toggle btn-delete">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="no-data">
                                    <div class="empty-state">
                                        <span class="empty-icon">👥</span>
                                        @if (!string.IsNullOrEmpty(Model.Filter.FilterByName))
                                        {
                                            <p>Ingen studenter fundet for "@Model.Filter.FilterByName"</p>
                                            <a asp-page="/Students/GetStudent" class="btn-toggle" role="menuitem">Show All Students</a>
                                        }
                                        else
                                        {
                                            <p>Ingen studenter fundet</p>
                                            <a asp-page="/Students/CreateStudent" class="btn-toggle" role="menuitem">Add student</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .search-container {
        padding: 1.5rem;
    }

    .search-form {
        display: flex;
        gap: 1rem;
        align-items: end;
    }

    .search-form .form-group {
        flex: 1;
        margin-bottom: 0;
    }

    .search-form .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
    }

    .filter-info {
        background-color: #e8f4fd;
        border: 1px solid #b6d7e8;
        border-radius: 4px;
        padding: 1rem;
        margin: 1rem 1.5rem;
    }

    .filter-info p {
        margin: 0;
        color: #2c5aa0;
    }

    @@media (max-width: 768px) {
        .search-form {
            flex-direction: column;
            align-items: stretch;
        }

        .search-form .form-actions {
            display: flex;
            gap: 0.5rem;
        }
    }
</style>