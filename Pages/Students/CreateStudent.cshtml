@page
@model _2._Sem_Project_Eksamen_System.Pages.Students.CreateStudentModel
@{
    ViewData["Title"] = "Create Student";
}

<div class="page-body">
    <div class="dashboard-container">
        <div class="welcome-card">
            <h1>Add Student</h1>
            <p>Create a new student in the system</p>
        </div>

        <div class="section-card">
            <div class="section-header">
                <h2>New Student</h2>
                <a asp-page="/Students/GetStudent" class="btn-toggle">Back to main page</a>
            </div>

            <div class="form-card">
                <form method="post">
                    <div class="form-grid">
                        <!-- Student Name -->
                        <div class="form-group">
                            <label asp-for="Student.StudentName" class="form-label">Full Name *</label>
                            <input asp-for="Student.StudentName" class="form-control" placeholder="Enter students full name" />
                            <span asp-validation-for="Student.StudentName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label asp-for="Student.Email" class="form-label">Email *</label>
                            <input asp-for="Student.Email" class="form-control" placeholder="Enter@student.email" />
                            <span asp-validation-for="Student.Email" class="text-danger"></span>
                        </div>

                        <!-- Class Dropdown -->
                        <div class="form-group">
                            <label asp-for="SelectedClassId" class="form-label">Allocated Class</label>
                            <select asp-for="SelectedClassId" asp-items="Model.ClassList" class="form-control">
                                <option value="">Vælg en klasse</option>
                            </select>
                            <span asp-validation-for="SelectedClassId" class="text-danger"></span>
                            <small class="form-text text-muted">Select the students class</small>
                        </div>

                        @*@"<!--" Placeholder for additional fields -->
                        <div class="form-group">
                            <label class="form-label">Studieprogram</label>
                            <input class="form-control" placeholder="Valgfrit studieprogram" />
                        </div>
                    </div>@*@

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <span class="btn-icon">➕</span>
                            Opret Student
                        </button>
                        <a asp-page="/Students/GetStudent" class="btn btn-secondary">
                            <span class="btn-icon">↩️</span>
                            Annuller
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}